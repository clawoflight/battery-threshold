[Unit]
Description=Set Battery Charge Thresholds
After=multi-user.target
DefaultDependencies=no

[Service]
Type=oneshot
ExecStart=/usr/local/bin/battery-threshold.sh start
ExecStop=/usr/local/bin/battery-threshold.sh stop
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
