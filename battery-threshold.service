[Unit]
Description=Set Battery Charge Thresholds
After=multi-user.target
DefaultDependencies=no

[Service]
Type=oneshot
ExecStart=battery-threshold.sh start
ExecStop=battery-threshold.sh stop
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
